<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="为了您的账户安全，请打开以下授权"
        android:textColor="#F4B430"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="请打开授权后重新尝试提交"
        android:textColor="#F4B430"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/yx_credit_tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="GPS定位\nGPS定位\nGPS定位\nGPS定位\nGPS定位"
        android:textColor="#8B8B8B"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yx_credit_tv_inow"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="#F4B430"
            android:textSize="18sp" />

        <View
            android:id="@+id/v_divide"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E6E6E6" />

        <TextView
            android:id="@+id/yx_credit_tv_setting"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="去设置"
            android:textColor="#F4B430"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>